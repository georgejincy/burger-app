<h1> Burgers waiting to be devoured! </h1>

<ul>
	{{#each burgers}}
		{{#unless this.devoured}}
	
			<li> {{this.burger_name}} 
			
				<form action="/burgers/update/{{this.id}}?_method=PUT" method="POST">
          			<input type="hidden" name="devoured" value="true">
          			<button type="submit">DEVOUR IT!</button>
       			</form>

			</li>
		{{/unless}}
	{{/each}}
</ul>

<h1> Burgers devoured! </h1>

<ul>
	{{#each burgers}}
		{{#if this.devoured}}
			<li>{{this.burger_name}}</li>
		{{/if}}
	{{/each}}
</ul>

<h1> Create your burger! </h1>

<form class = "create-form" action = "/" method = "POST">
	<div class="form-group">
		<label for="burger">Burger Name: </label>
		<input type="text" id="burger" name="name">
	</div>
	<button type="submit">Create</button>

</form>